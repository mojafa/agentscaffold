[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "{{package_name}}"
version = "0.1.0"
description = "A {{agent_name}} agent built with AgentScaffold"
requires-python = ">=3.10"
dependencies = [
    "pydantic>=2.0.0",
    "agentscaffold",
    "pydantic-ai",
    "daytona-sdk",
    "python-dotenv",
{% if llm_provider == "openai" %}
    "openai>=1.0.0",
{% elif llm_provider == "anthropic" %}
    "anthropic>=0.5.0",
{% elif llm_provider == "huggingface" %}
    "huggingface_hub>=0.16.0",
{% elif llm_provider == "ollama" %}
    "ollama>=0.1.0",
{% endif %}

{% if search_provider == "brave" %}
    "brave-search>=0.1.0",
{% elif search_provider == "browserbase" %}
    "browserbase>=0.1.0",
{% endif %}

{% if memory_provider == "supabase" %}
    "supabase>=0.7.0",
{% elif memory_provider == "milvus" %}
    "pymilvus>=2.2.0",
{% elif memory_provider == "chromadb" %}
    "chromadb>=0.4.0",
{% endif %}

{% if logging_provider == "logfire" %}
    "logfire>=0.1.0",
{% endif %}
]

[tool.black]
line-length = 88

[tool.ruff]
line-length = 88
select = ["E", "F", "I"]